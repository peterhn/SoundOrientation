<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/sound_orientation" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sound_orientation_name" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/sound_orientation_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/mainFrameLayout">

        <TextView
            android:layout_width="194dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/pitch_angle"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/azimuth_angle"
            android:layout_gravity="left|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/roll_angle"
            android:layout_gravity="right|bottom" />

        <TextView
            android:layout_width="367dp"
            android:layout_height="172dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="INFORMATICS 133"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textSize="50dp"
            android:textAlignment="center"
            android:textColor="#ff07ab07" />
    </FrameLayout>

</RelativeLayout>
